.wrapper
  .side-bar
    .side-header
      .header__name
        = current_user.name
      %ul.header__lists
        %li.list
        = link_to new_group_path do
          = fa_icon 'edit', class: 'icon'
        %li.list
        = link_to edit_user_path(current_user) do
          =fa_icon 'cog', class: 'icon'

    .groups
      .group
        .group__name 俺
        .group__message ぽぽぽぽ〜ん！
      .group
        .group__name わいわい
        .group__message 風呂沸いた。

  .chat
    .header
      .left-header
        .left-header__title わいわい
        %ul.left-header__members Member:
        .member kurochang
        .member lion

      .right-header
        .right-header__button
        = link_to "Edit", "/users/sign_in"

    .messages
      .message
        .upper-message
          .upper-message__user-name kurochang
          .upper-message__date 2019/01/09 04:22:58
        .lower-message
          .lower-message__content 今日はふりかけご飯

    .form
      %input#message_content.form__message.js-content{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
      .form__mask
        %label.form__mask__image{:for => "massage_image"}
          %input#message_image.hidden.js-file{:name => "message[image]", :type => "file"}/
          =fa_icon 'image'
      %input.form__submit{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/
